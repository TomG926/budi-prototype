<div class="max-w-7xl mx-auto px-6 py-12">
  <div class="mb-10">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">AI Analyses & Recommendations</h1>
    <p class="text-gray-600">View all AI-generated business analyses and recommendations</p>
  </div>

  <% if @uploads_with_analyses.any? %>
    <div class="grid gap-6">
      <% @uploads_with_analyses.each do |upload| %>
        <%= link_to analysis_path(upload.id), class: "group block" do %>
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl shadow-sm border border-green-100 hover:shadow-xl hover:border-green-200 transition-all duration-300 p-6">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="flex items-center space-x-2 mb-1">
                      <h3 class="text-lg font-semibold text-gray-900 group-hover:text-green-700 transition-colors">
                        <%= upload.name.present? ? upload.name : "Upload ##{upload.id}" %>
                      </h3>
                      <% if upload.industry_type && upload.industry_type != 'other' %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                          <%= IndustryPromptsService.for_industry(upload.industry_type)[:name] %>
                        </span>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-500"><%= upload.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                  </div>
                </div>
                
                <div class="bg-white/60 backdrop-blur-sm rounded-xl p-4 mb-4">
                  <p class="text-sm text-gray-700 line-clamp-3">
                    <%= truncate(strip_tags(upload.open_ai_recommendations), length: 200) %>
                  </p>
                </div>
                
                <div class="flex items-center space-x-6">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <span class="text-sm font-medium text-gray-900"><%= upload.data_rows.count %></span>
                    <span class="text-sm text-gray-500">data points</span>
                  </div>
                  
                  <div class="flex items-center space-x-2">
                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                    <span class="text-sm text-gray-600">AI Analysis Complete</span>
                  </div>
                </div>
              </div>
              
              <div class="ml-4">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-green-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-16 text-center">
      <div class="max-w-md mx-auto">
        <div class="w-20 h-20 bg-gradient-to-br from-green-100 to-emerald-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No analyses yet</h3>
        <p class="text-gray-600 mb-8">Upload a CSV file and run AI analysis to see recommendations here</p>
        <%= link_to uploads_path, class: "inline-flex items-center space-x-2 text-green-600 hover:text-green-700 font-medium" do %>
          <span>View Uploads</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

