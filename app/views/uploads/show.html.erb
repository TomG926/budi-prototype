<div class="max-w-7xl mx-auto px-6 py-12">
  <%= link_to uploads_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 mb-8 transition-colors" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Back to Uploads
  <% end %>

  <div class="mb-10">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center shadow-lg">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <div>
        <h1 class="text-4xl font-bold text-gray-900"><%= @upload.name.present? ? @upload.name : "Upload ##{@upload.id}" %></h1>
        <div class="flex items-center space-x-3 mt-2">
          <p class="text-gray-600"><%= @upload.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          <% if @upload.industry_type && @upload.industry_type != 'other' %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-700">
              <%= IndustryPromptsService.for_industry(@upload.industry_type)[:name] %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="text-sm font-medium text-gray-600">Status</span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
          <%= case @upload.status
              when 'done'
                'bg-emerald-50 text-emerald-700 border border-emerald-200'
              when 'processing'
                'bg-amber-50 text-amber-700 border border-amber-200'
              when 'failed'
                'bg-red-50 text-red-700 border border-red-200'
              else
                'bg-gray-50 text-gray-700 border border-gray-200'
              end %>">
          <%= @upload.status.capitalize %>
        </span>
      </div>
      <div class="flex items-baseline space-x-2">
        <span class="text-3xl font-bold text-gray-900"><%= @row_count %></span>
        <span class="text-sm text-gray-500">rows imported</span>
      </div>
    </div>

    <% if @upload.has_power_bi_integration? %>
      <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-2xl shadow-sm border border-blue-100 p-6">
        <div class="flex items-center justify-between mb-4">
          <span class="text-sm font-medium text-blue-900">Power BI</span>
          <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
        </div>
        <p class="text-sm text-blue-800 font-medium">Connected</p>
        <p class="text-xs text-blue-600 mt-1 font-mono"><%= truncate(@upload.power_bi_dataset_id, length: 20) %></p>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-4">
          <span class="text-sm font-medium text-gray-600">Power BI</span>
          <div class="w-2 h-2 bg-gray-300 rounded-full"></div>
        </div>
        <p class="text-sm text-gray-600">Not configured</p>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <span class="text-sm font-medium text-gray-600 block mb-4">File</span>
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-900">CSV File</p>
          <p class="text-xs text-gray-500">Uploaded successfully</p>
        </div>
      </div>
    </div>
  </div>

  <% if @upload.has_power_bi_integration? %>
    <div class="bg-gradient-to-br from-blue-600 to-purple-600 rounded-2xl shadow-xl p-8 mb-8 text-white">
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="text-xl font-bold mb-2">Power BI Integration Active</h3>
          <p class="text-blue-100 mb-4">
            Your data is available in Power BI. Use AI-powered visuals to uncover insights and generate recommendations.
          </p>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 mb-4">
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-blue-200 block mb-1">Dataset ID</span>
                <code class="text-white font-mono text-xs bg-white/20 px-2 py-1 rounded"><%= truncate(@upload.power_bi_dataset_id, length: 30) %></code>
              </div>
              <div>
                <span class="text-blue-200 block mb-1">Table</span>
                <code class="text-white font-mono text-xs bg-white/20 px-2 py-1 rounded"><%= @upload.power_bi_table_name %></code>
              </div>
            </div>
          </div>
          <div class="flex items-start space-x-2 text-sm text-blue-100">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p><strong>Next steps:</strong> Open Power BI and use Key Influencers, Anomaly Detection, or Smart Narrative visuals for AI-powered insights.</p>
          </div>
        </div>
      </div>
      
      <% if @upload.industry_type && @upload.industry_type != 'other' %>
        <% industry_info = IndustryPromptsService.for_industry(@upload.industry_type) %>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 mt-6">
          <h4 class="text-lg font-bold mb-4 text-white"><%= industry_info[:name] %> Analysis Guide</h4>
          <p class="text-blue-100 mb-4"><%= industry_info[:description] %></p>
          
          <div class="mb-4">
            <h5 class="text-sm font-semibold text-white mb-2">Recommended Power BI Prompts:</h5>
            <ul class="space-y-1 text-sm text-blue-100">
              <% industry_info[:power_bi_prompts].first(5).each do |prompt| %>
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  <span><%= prompt %></span>
                </li>
              <% end %>
            </ul>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <h5 class="text-sm font-semibold text-white mb-2">Key Metrics to Track:</h5>
              <ul class="space-y-1 text-xs text-blue-100">
                <% industry_info[:key_metrics].first(4).each do |metric| %>
                  <li class="flex items-start space-x-2">
                    <span class="text-blue-300">•</span>
                    <span><%= metric %></span>
                  </li>
                <% end %>
              </ul>
            </div>
            <div>
              <h5 class="text-sm font-semibold text-white mb-2">Recommended Visualizations:</h5>
              <ul class="space-y-1 text-xs text-blue-100">
                <% industry_info[:visualizations].first(4).each do |viz| %>
                  <li class="flex items-start space-x-2">
                    <span class="text-blue-300">•</span>
                    <span><%= viz %></span>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% elsif @upload.status == 'done' %>
    <div class="bg-amber-50 border border-amber-200 rounded-2xl p-6 mb-8">
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-amber-100 rounded-xl flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-semibold text-amber-900 mb-1">Power BI Not Configured</h3>
          <p class="text-amber-800 text-sm">
            Data was imported successfully and stored in PostgreSQL. Configure Power BI credentials to enable AI-powered analysis features.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <%# OpenAI Analysis Section %>
  <% if @upload.status == 'done' %>
    <div class="bg-gradient-to-br from-green-600 to-emerald-600 rounded-2xl shadow-xl p-8 mb-8 text-white">
      <div class="flex items-start justify-between mb-6">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-2">AI Analysis</h3>
            <p class="text-green-100 mb-4">
              Get instant, actionable business recommendations using the same industry-specific prompts as Power BI, powered by OpenAI GPT-4o-mini.
            </p>
            <% if @upload.industry_type && @upload.industry_type != 'other' %>
              <p class="text-xs text-green-200 italic">
                Analysis will use <%= IndustryPromptsService.for_industry(@upload.industry_type)[:name] %>-specific prompts and metrics.
              </p>
            <% end %>
          </div>
        </div>
        
        <% if @upload.open_ai_analysis_status != 'analyzing' && @upload.open_ai_analysis_status != 'completed' %>
          <%= button_to analyze_with_openai_upload_path(@upload), method: :post, 
              class: "bg-white text-green-600 px-6 py-3 rounded-full font-semibold hover:bg-green-50 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-green-600 shadow-lg",
              data: { turbo_method: :post } do %>
            <span class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <span>Analyze with AI</span>
            </span>
          <% end %>
        <% elsif @upload.open_ai_analysis_status == 'analyzing' %>
          <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-full font-semibold">
            <span class="flex items-center space-x-2">
              <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <span>Analyzing...</span>
            </span>
          </div>
        <% end %>
      </div>

      <% if @upload.open_ai_analysis_status == 'completed' && @upload.open_ai_recommendations.present? %>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 mt-6">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-3">
              <h4 class="text-lg font-bold text-white">AI-Generated Recommendations</h4>
              <%= link_to analysis_path(@upload.id), class: "text-sm text-green-100 hover:text-white font-medium transition-colors underline" do %>
                View Full Analysis
              <% end %>
            </div>
            <%= button_to analyze_with_openai_upload_path(@upload), method: :post, 
                class: "text-sm text-green-100 hover:text-white font-medium transition-colors",
                data: { turbo_method: :post } do %>
              <span class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <span>Re-analyze</span>
              </span>
            <% end %>
          </div>
          <div class="prose prose-invert prose-sm max-w-none text-green-50 line-clamp-6">
            <%= truncate(strip_tags(format_recommendations(@upload.open_ai_recommendations)), length: 500) %>
          </div>
          <%= link_to analysis_path(@upload.id), class: "mt-4 inline-flex items-center text-sm text-green-100 hover:text-white font-medium transition-colors" do %>
            Read full analysis
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      <% elsif @upload.open_ai_analysis_status == 'analysis_failed' %>
        <div class="bg-red-500/20 backdrop-blur-sm rounded-xl p-4 mt-6">
          <p class="text-white text-sm">
            Analysis failed. Please check your OpenAI API key configuration and try again.
          </p>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @sample_rows.any? %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-100 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900">Sample Data</h2>
        <p class="text-sm text-gray-500 mt-1">First 10 rows from your upload</p>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-100">
          <thead class="bg-gray-50">
            <tr>
              <% if @upload.schema_columns.any? %>
                <% @upload.schema_columns.keys.each do |column| %>
                  <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    <%= column %>
                  </th>
                <% end %>
              <% else %>
                <% @sample_rows.first.data.keys.each do |key| %>
                  <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    <%= key %>
                  </th>
                <% end %>
              <% end %>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-50">
            <% @sample_rows.each_with_index do |row, index| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <% row.data.each do |key, value| %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= value %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>