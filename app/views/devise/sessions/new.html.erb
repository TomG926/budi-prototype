<div class="min-h-screen bg-gradient-to-br from-purple-600 via-blue-600 to-indigo-700 flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full">
    <%= link_to root_path, class: "flex items-center justify-center space-x-3 mb-8" do %>
      <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
        <span class="text-white font-bold text-xl">B</span>
      </div>
      <span class="text-2xl font-semibold text-white">Budi</span>
    <% end %>

    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome back</h2>
      <p class="text-gray-600 mb-8">Sign in to your account</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <% if alert %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl text-sm">
            <%= alert %>
          </div>
        <% end %>

        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500" %>
            <%= f.label :remember_me, "Remember me", class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-3 rounded-full font-semibold hover:shadow-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-purple-600 hover:text-purple-700 font-medium" %>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-200 text-center">
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign up", new_user_registration_path, class: "text-purple-600 hover:text-purple-700 font-semibold" %>
        </p>
      </div>
    </div>
  </div>
</div>

